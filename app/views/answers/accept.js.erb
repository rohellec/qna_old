// Removing class for previous accepted answer
var acceptedAnswer = $('.accepted');
acceptedAnswer.removeClass('accepted');

// Replacing links for new accepted answer
var answer = $('#answer-<%= @answer.id %>');
answer.addClass('accepted');

// Marking question as answered
var question = $('.question');
question.addClass('answered');

// Moving accepted answer to the top
var answers = $('.answers tbody');
answers.prepend(answer);
