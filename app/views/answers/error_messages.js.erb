$('#errors').remove();

var error_messages = '<%= j render "common/error_messages", resource: @answer %>';

<% if @answer.persisted? %>
  var answerId = <%= @answer.id %>;
  var answer = $('#answer-' + answerId);
  answer.find('.edit-answer').prepend(error_messages);
<% else %>
  $('.new-answer').prepend(error_messages);
<% end %>
