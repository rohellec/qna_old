$('.question-title').text('<%= @question.title %>');
$('.question-body' ).text('<%= @question.body %>');

// Updating flash
var message = $('<div>', {
  'class': 'alert success',
  'text':  '<%= j flash[:success] %>'
});
$('.flash').html(message);

var attachments = $('.attachments ul');
attachments.html('<%= j render @question.attachments %>');

$('.edit-question').hide();
$('.question').show();

$('.edit-question-link').removeClass('cancel').text('Edit');
